<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".findfriends">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fftext1"
        android:text="Friend's profile "
        android:textSize="35dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        >
    </TextView>
    <EditText
        android:id="@+id/findfuser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="friend's username "
        android:layout_below="@+id/fftext1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:textColorHint="#AAAAAA"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/sendfuser"
        android:layout_below="@+id/findfuser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:text="find"
        />

    <RelativeLayout
        android:id="@+id/findfrienduser"
        android:layout_below="@+id/sendfuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <RelativeLayout
            android:background="@drawable/tableborder"
            android:id="@+id/layoutname"
            android:layout_width="300dp"
            android:layout_height="50dp"

            >
            <TextView
                android:id="@+id/st1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/tableborder"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="UserName"
                android:textColor="#000000"
                />

            <TextView
                android:layout_toRightOf="@+id/st1"
                android:id="@+id/findfusershow"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/tableborder"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/tableborder"
            android:layout_below="@+id/layoutname"
            android:id="@+id/layoutmatchplayed"
            android:layout_width="300dp"
            android:layout_height="50dp"
            >

            <TextView
                android:id="@+id/st2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/tableborder"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Match played"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/matchplayedshow"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/st2"
                android:background="@drawable/tableborder"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/tableborder"
            android:layout_below="@id/layoutmatchplayed"
            android:id="@+id/layoutrating"
            android:layout_width="300dp"
            android:layout_height="50dp"
            >


            <TextView
                android:id="@+id/st4"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/tableborder"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Rating"
                android:textColor="#000000"
                />

            <TextView
                android:layout_toRightOf="@+id/st4"
                android:id="@+id/matchrating"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/tableborder"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/tableborder"
            android:layout_below="@id/layoutrating"
            android:id="@+id/layoutmatchwins"
            android:layout_width="300dp"
            android:layout_height="50dp"
            >


            <TextView
                android:id="@+id/st3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/tableborder"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Match Wins"
                android:textColor="#000000"
                />

            <TextView
                android:layout_toRightOf="@+id/st3"
                android:id="@+id/matchwinsshow"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/tableborder"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>