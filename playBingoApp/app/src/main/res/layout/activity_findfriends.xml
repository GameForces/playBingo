<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".findfriends">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fftext1"
        android:text="Check your friend profile "
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        >
    </TextView>
    <EditText
        android:id="@+id/findfuser"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:hint="Your friend's username "
        android:layout_below="@+id/fftext1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/sendfuser"
        android:layout_below="@+id/findfuser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        />

    <RelativeLayout
        android:id="@+id/findfrienduser"
        android:layout_below="@+id/sendfuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <RelativeLayout
            android:background="@drawable/border3"
            android:id="@+id/layoutname"
            android:layout_width="300dp"
            android:layout_height="70dp"
            >
            <TextView
                android:id="@+id/st1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/border3"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="UserName"
                android:textColor="#000000"
                />

            <TextView
                android:layout_toRightOf="@+id/st1"
                android:id="@+id/findfusershow"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/border3"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#000000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/border3"
            android:layout_below="@+id/layoutname"
            android:id="@+id/layoutmatchplayed"
            android:layout_width="300dp"
            android:layout_height="100dp"
            >

            <TextView
                android:id="@+id/st2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/border3"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="Match played"
                android:textColor="#000000"
                />

            <TextView
                android:layout_toRightOf="@+id/st2"
                android:id="@+id/matchplayedshow"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/border3"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#000000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/border3"
            android:layout_below="@id/layoutmatchplayed"
            android:id="@+id/layoutmatchwins"
            android:layout_width="300dp"
            android:layout_height="100dp"
            >


            <TextView
                android:id="@+id/st3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/border3"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="Match Wins"
                android:textColor="#000000"
                />

            <TextView
                android:layout_toRightOf="@+id/st3"
                android:id="@+id/matchwinsshow"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/border3"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#000000"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>