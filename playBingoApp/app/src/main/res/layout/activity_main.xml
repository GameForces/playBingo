<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000"
    >

    <ImageView
        android:src="@drawable/bingo"
        android:id="@+id/mainback"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </ImageView>
    <TextView
        android:layout_below="@id/mainback"
        android:id="@+id/play_online"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7dp"
        android:fontFamily="cursive"
        android:shadowColor="@android:color/white"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="10.0"
        android:text="Play Online"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#FFFFFF"
        android:textSize="80dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/play_with_friends"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_below="@id/play_online"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:shadowColor="@android:color/white"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="10.0"
        android:text="Play with Friends"
        android:textColor="#ffffff"
        android:textSize="53dp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/play_with_friends"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:fontFamily="cursive"
        android:textSize="50dp"
        android:text="Chat Room"
        android:shadowColor="@android:color/white"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="10.0"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/chat_room"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        />


</RelativeLayout>