<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:text="Game Over"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:paddingTop="40dp"
        android:background="#0500FF"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp">


        <TextView
            android:id="@+id/game_go_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/game_play_online"
            android:background="#FF0000"
            android:padding="10dp"
            android:text="Home"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/game_play_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#FFA200"
            android:padding="10dp"
            android:text="play online"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/game_replay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/game_play_online"
            android:background="#15FF00"
            android:padding="10dp"
            android:text="replay"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>