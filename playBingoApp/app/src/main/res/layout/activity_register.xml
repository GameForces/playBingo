<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/playBingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:text="playBINGO"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regis_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Enter username"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        >

    </EditText>

    <EditText
        android:id="@+id/regis_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_username"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="Enter Password"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        >

    </EditText>
    <TextView
        android:id="@+id/already_have"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_submit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="18dp"
        android:text="Already have account"
        android:textColor="#ff0000"
        android:gravity="center"
        android:textSize="25dp">

    </TextView>
    <Button
        android:id="@+id/regis_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regis_pass"
        android:layout_centerInParent="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/bor2_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="Sign In"
        android:textAlignment="center"
        android:textSize="25dp"></Button>

</RelativeLayout>