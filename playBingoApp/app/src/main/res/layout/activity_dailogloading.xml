<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".dailogloading"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="@drawable/border3"
        >

        <TextView
            android:id="@+id/dailogtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matching.."
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            />
        <TextView

            android:id="@+id/dailogtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="finding oponent"
            android:layout_below="@id/dailogtext1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/circle1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/dailogtext2"
            android:background="@drawable/loadingcircle1"
            android:tag="c1"
            android:layout_toLeftOf="@+id/circle2"
            />

        <Button
            android:id="@+id/circle2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/dailogtext2"
            android:layout_marginLeft="20dp"
            android:background="@drawable/loadingcircle2"
            android:tag="c2"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_toRightOf="@+id/circle2"
            android:id="@+id/circle3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/dailogtext2"
            android:layout_marginLeft="20dp"
            android:background="@drawable/loadingcircle3"
            android:tag="c3"
            />

        </RelativeLayout>
    </RelativeLayout>